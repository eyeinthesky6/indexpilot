# IndexPilot Production Environment Variables
# Copy this file to .env.production and fill in your production values
# NEVER commit .env.production to version control

# Environment
ENVIRONMENT=production

# Database Configuration
# Use either SUPABASE_DB_URL (for Supabase) OR individual DB_* variables
# SUPABASE_DB_URL=postgresql://user:password@host:5432/database?sslmode=require
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=indexpilot
DB_USER=indexpilot_prod
DB_PASSWORD=your_secure_production_password_here
DB_SSLMODE=require

# Connection Pool Settings
MIN_CONNECTIONS=5
MAX_CONNECTIONS=50

# Query Settings
QUERY_TIMEOUT=60

# Maintenance Settings
MAINTENANCE_INTERVAL=7200

# Logging
LOG_LEVEL=WARNING

# API Configuration (if applicable)
API_SECRET_KEY=your_api_secret_key_here
API_HOST=0.0.0.0
API_PORT=8000

# Optional: Monitoring and Alerting
# PROMETHEUS_ENABLED=true
# SENTRY_DSN=your_sentry_dsn_here
